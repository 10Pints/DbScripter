{
   "Logging": {
      "LogLevel": {
         "Default": "Debug",
         "System": "Information",
         "Microsoft": "Information"
      }
   },

   "ThreadSettings": { "MaxThreads": 4 },

   "appSettings": {
      "Name": "DbScripter-Farming config",
      "FilePath": "D:\\Dev\\DbScripter\\DbScripterApp\\AppSettings.json",
      "Server": "DEVI9",
      "Instance": "",
      "Database": "Farming_dev",
      "Script Dir": "E:\\Backups\\iDrive\\Dev\\backup_repos\\Farming\\Backups",
      "Script File": "Farming.sql",
      "AddTimestamp": "true",
      "CreateMode": "Create",
      "RequiredSchemas": "dbo,test",
      "RequiredTypes": "Schemas,Assemblies,Tables,Triggers,Procedures,Functions,Views,UserDefinedDataTypes",
      "ScriptUseDb": "true",
      "DisplayScript": "true",
      "DisplayLog": "true",
      "LogFile": "D:\\Logs\\Farming.log",
      "LogLevel": "INFO",
      "IsExportingData": "false",
      "IndividualFiles": "false"
   },
   "NLog": {
      "internalLogLevel": "Info",
      "internalLogFile": "D:\\logs\\internal-nlog.log",
      "extensions": [
         { "assembly": "NLog.Extensions.Logging" },
      ],
      "targets": {
         "allfile": {
            "type": "File",
            "fileName": "D:\\logs\\DBScripter.log",
            "layout": "${date}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message:raw=true} ${exception:format=tostring}"
         }
      },
      "rules": [
         {
            "logger": "*",
            "minLevel": "Trace",
            "writeTo": "allfile"
         },
         {
            "logger": "Microsoft.*",
            "maxLevel": "Info",
            "final": "true"
         }
      ]
   }
}