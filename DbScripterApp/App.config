<?xml version="1.0" encoding="utf-8"?>
<configuration>
   <configSections>
      <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
   </configSections>

   <appSettings>
      <add key="AddTimestamp"       value="True" />
      <add key="Config Name"        value="DbScripter config" />
      <add key="CreateMode"         value="Create" />
      <add key="Database"           value="FarmingX" />
      <add key="DisplayLog"         value="True" />
      <add key="DisplayScript"      value="True" />
      <add key="Instance"           value="SQLExpress" />
      <add key="LogFile"            value="D:\Logs\Farming.log" />
      <add key="LogLevel"           value="INFO" />
      <add key="RequiredTypes"      value="Schema,Tables,Procedures,Functions,Views" />
      <add key="Schemas"            value="dbo,test" />
      <add key="Script Dir"         value="D:\Data\Biz\Banana Farming\Data\Archive" />
      <add key="Script File"        value="Farming.sql" />
      <add key="ScriptUseDb"        value="True" />
      <add key="Server"             value="DEVI9\SQLEXPRESS" />
      <add key="TargetChildTypes"   value="Schema" />
    </appSettings>

    <log4net>
        <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
            <layout type="log4net.Layout.PatternLayout">
                <param name="Header" value="[Header]\r\n" />
                <param name="Footer" value="[Footer]\r\n" />
                <param name="ConversionPattern" value="%-6level %message%newline" />
            </layout>
        </appender>
        
        <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
            <file type="log4net.Util.PatternString" value=".\Log.log" />
            <appendToFile value="false" />
            <maxSizeRollBackups value="10" />
            <staticLogFileName value="true" />
            <rollingStyle value="Once" />
            <layout type="log4net.Layout.PatternLayout">
                <ConversionPattern value="%date{yyMMdd-HHmmss.fff} [%thread] %-6level %message%newline" />
            </layout>
        </appender>
        
        <root>
            <level value="ALL" />
            <appender-ref ref="ConsoleAppender" />
            <appender-ref ref="RollingFileAppender" />
        </root>
    </log4net>

    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
</configuration>
